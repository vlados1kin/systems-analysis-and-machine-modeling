<Window x:Class="CAIMMOD.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Лабораторная работа №1"
        Height="720" Width="1100">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0">
            <StackPanel>
                <TextBlock Text="Алгоритм Лемера" FontSize="18" FontWeight="Bold" Margin="2,0,0,8"/>
                <TextBlock Text="Параметры генератора (LCG)" FontWeight="Bold" Margin="0,4,0,8"/>

                <StackPanel Orientation="Vertical" Margin="0,4">
                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <TextBlock Width="90" VerticalAlignment="Center">x0:</TextBlock>
                        <TextBox x:Name="SeedBox" Text="123456789" Width="180"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <TextBlock Width="90" VerticalAlignment="Center">a:</TextBlock>
                        <TextBox x:Name="Abox" Text="1664525" Width="180" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <TextBlock Width="90" VerticalAlignment="Center">c:</TextBlock>
                        <TextBox x:Name="CBox" Text="1013904223" Width="180" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <TextBlock Width="90" VerticalAlignment="Center">m:</TextBlock>
                        <TextBox x:Name="MBox" Text="2147483648" Width="180" />
                    </StackPanel>
                </StackPanel>

                <TextBlock Text="Выборка и тесты" FontWeight="Bold" Margin="0,12,0,6"/>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Width="90" VerticalAlignment="Center">Размер n:</TextBlock>
                    <TextBox x:Name="NBox" Text="10000" Width="120" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <TextBlock Width="90" VerticalAlignment="Center">Интервалы:</TextBlock>
                    <TextBox x:Name="BinsBox" Text="20" Width="120" />
                </StackPanel>

                <Button x:Name="GenerateBtn" Content="Сгенерировать и показать" Margin="0,10,0,0" Click="GenerateBtn_Click" />

                <TextBlock Text="Результаты тестов" FontWeight="Bold" Margin="0,12,0,6"/>
                <TextBlock x:Name="ChiResult" TextWrapping="Wrap" Margin="0,2"/>
                <TextBlock x:Name="KsResult" TextWrapping="Wrap" Margin="0,2"/>

                <TextBlock Text="Вывод" FontWeight="Bold" Margin="0,12,0,6"/>
                <TextBlock x:Name="Conclusion" TextWrapping="Wrap" Margin="0,2"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0">
                <oxy:PlotView x:Name="HistogramPlot" Margin="0" />
            </Border>

            <Border Grid.Row="1">
                <oxy:PlotView x:Name="CdfPlot" Margin="0" />
            </Border>
        </Grid>
    </Grid>
</Window>