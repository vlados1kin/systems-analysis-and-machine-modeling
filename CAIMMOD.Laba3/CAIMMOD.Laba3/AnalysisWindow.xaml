<Window x:Class="CAIMMOD.Laba3.AnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Лабораторная работа №3" Height="700" Width="1000">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Задачи анализа" Margin="0,0,0,8" />

            <Button Content="1. Нормальность (Хи-квадрат)" Click="BtnTask1_ChiSquare_Click" Margin="0,5" Height="30" />
            <Button Content="2. Оценки (N=20)" Click="BtnTask2_Estimates_Click" Margin="0,5" Height="30" />
            <Button Content="3. Точность от N" Click="BtnTask3_Accuracy_Click" Margin="0,5" Height="30" />
            <Button Content="4. Переходный период" Click="BtnTask4_Transient_Click" Margin="0,5" Height="30" />
            <Button Content="5. Эргодичность" Click="BtnTask5_Ergodicity_Click" Margin="0,5" Height="30" />
            <Button Content="6. Чувствительность" Click="BtnTask6_Sensitivity_Click" Margin="0,5" Height="30" />

            <Separator Margin="0,10" />
            <TextBlock Text="Лог выполнения:" FontWeight="Bold" />
            <TextBox Name="TxtStatsLog" Height="300" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Margin="0,5,0,0" />
        </StackPanel>

        <GridSplitter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="3" ShowsPreview="False" />

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <oxy:PlotView Name="StatsPlotView" Grid.Row="0" Foreground="Black" />
        </Grid>
    </Grid>
</Window>