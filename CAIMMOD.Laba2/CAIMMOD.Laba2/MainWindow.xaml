<Window x:Class="CAIMMOD.Laba2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Лабораторная работа №2" Height="900" Width="1200">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Число столиков:" VerticalAlignment="Center" Margin="4" />
            <TextBox Name="TxtTables" Width="60" Text="15" Margin="4" />
            <TextBlock Text="Число официантов:" VerticalAlignment="Center" Margin="4" />
            <TextBox Name="TxtWaiters" Width="60" Text="3" Margin="4" />
            <TextBlock Text="Средний интервал прихода (мин):" VerticalAlignment="Center" Margin="4" />
            <TextBox Name="TxtMeanInterarrival" Width="80" Text="2.0" Margin="4" />
            <TextBlock Text="Среднее время обслуживания (мин):" VerticalAlignment="Center" Margin="4" />
            <TextBox Name="TxtMeanService" Width="80" Text="20.0" Margin="4" />
            <TextBlock Text="Длительность прогона (мин):" VerticalAlignment="Center" Margin="4" />
            <TextBox Name="TxtSimTime" Width="80" Text="600" Margin="4" />
            <TextBlock Text="Количество прогонов:" VerticalAlignment="Center" Margin="4" />
            <TextBox Name="TxtRuns" Width="60" Text="30" Margin="4" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <GroupBox Header="Непрерывный отклик" Grid.Row="0" Grid.Column="0" Margin="6">
                    <oxy:PlotView Name="PlotOccupied" Foreground="Black" />
                </GroupBox>

                <GroupBox Header="Непрерывный отклик" Grid.Row="0" Grid.Column="1" Margin="6">
                    <oxy:PlotView Name="PlotUtilization" Foreground="Black" />
                </GroupBox>

                <GroupBox Header="Дискретный отклик" Grid.Row="1" Grid.Column="0" Margin="6">
                    <oxy:PlotView Name="PlotWaitingHist" Foreground="Black" />
                </GroupBox>

                <GroupBox Header="Непрерывный отклик" Grid.Row="1" Grid.Column="1" Margin="6">
                    <oxy:PlotView Name="PlotCumulativeServed" Foreground="Black" />
                </GroupBox>
            </Grid>

            <StackPanel Grid.Column="1" Margin="6">
                <TextBlock Text="Трассировка / лог событий" Margin="0,0,0,6" />
                <TextBox Name="TxtLog" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextWrapping="NoWrap" Height="350" />
                <CheckBox Name="ChkTrace" Content="Режим трассировки" VerticalAlignment="Center" Margin="0,8,0,4" />
                <Button Name="BtnRunOnce" Click="BtnRunOnce_Click" Content="Запустить 1 прогон" Margin="0,8,0,4" />
                <Button Name="BtnRunMany" Click="BtnRunMany_Click" Content="Запустить N прогонов" Margin="0,8,0,4" />
                <Button Name="BtnClear" Click="BtnClear_Click" Content="Очистить" Margin="0,8,0,4" />
                <TextBlock Text="Итоговые статистики" Margin="0,8,0,4" />
                <TextBlock Name="TxtStats" Text="Здесь будут показаны итоговые статистики" TextWrapping="Wrap" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>